<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/img_h"
        android:scaleType="centerCrop"
        android:background="#333333"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/img_h"
        android:background="@drawable/template_mask"
        />

    <TextView
        style="@style/Base.TextAppearance.AppCompat.Headline"
        android:id="@+id/nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text="Nombre Pelicula"
        android:layout_alignBottom="@id/img"
        android:padding="@dimen/small"
        />

    <TextView
        android:id="@+id/categoria"
        style="@style/Base.TextAppearance.AppCompat.Caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:text="Categoria"
        android:layout_below="@+id/img"
        android:padding="@dimen/small"
        />
    <TextView
        style="@style/Base.TextAppearance.AppCompat.Body2"
        android:id="@+id/sinopsis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/categoria"
        android:layout_marginLeft="@dimen/small"
        android:layout_marginRight="@dimen/small"
        android:text="dasda dasdasd a dasdas dasdas"
        />

    <ImageView
        android:id="@+id/ic_estreno"
        android:layout_width="@dimen/icon"
        android:layout_height="@dimen/icon"
        android:src="@drawable/ic_estreno"
        android:layout_below="@id/sinopsis"
        android:layout_margin="@dimen/small"
        />

    <TextView
        android:id="@+id/estreno"
        style="@style/Base.TextAppearance.AppCompat.Body2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ic_estreno"
        android:layout_alignBottom="@id/ic_estreno"
        android:text="2016/05/04"
        />


</RelativeLayout>